<% content_for(:title) do %>
  Edit <%= resource_name.to_s.humanize %>
<% end %>

<%= form_with(model: resource, as: resource_name, url: registration_path(resource_name), builder: DeviseFormBuilder, class: 'space-y-6', html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div>
    <%= f.label :email %>
    <div class="mt-1">
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="mt-1">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div>
    <%= f.label :password %>
    <div class="mt-1">
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em><br>
      <% end %>
      <i>(leave blank if you don't want to change it)</i>
    </div>
  </div>

  <div>
    <%= f.label :password_confirmation %>
    <div class="mt-1">
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div>
    <%= f.label :current_password %>
    <div class="mt-1">
      <%= f.password_field :current_password, autocomplete: "current-password" %>
      <i>(we need your current password to confirm your changes)</i>
    </div>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "mt-4 w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" %>

<ul class="block mt-6">
  <li><%= link_to "Back to dashboard", root_path, class: 'text-sm font-medium text-gray-600 hover:text-gray-500' %></li>
</ul>
